<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="FirstLabPersistenceUnit" transaction-type="JTA">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>is.fistlab.database.entities.Coordinates</class>
        <class>is.fistlab.database.entities.Location</class>
        <class>is.fistlab.database.entities.Person</class>
        <class>is.fistlab.database.entities.PotentialAdmin</class>
        <class>is.fistlab.database.entities.StudyGroup</class>
        <class>is.fistlab.database.entities.User</class>
        <properties>
            <property name="eclipselink.persistence-validation" value="true"/>
            <property name="javax.persistence.validation.mode" value="AUTO"/>
        </properties>
    </persistence-unit>

</persistence>
